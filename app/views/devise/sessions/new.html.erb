<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field form-group">
    <%= f.email_field :email, placeholder: "Email", required: true, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, placeholder: "Password", required: true, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-success' %>
  </div>
<% end %>

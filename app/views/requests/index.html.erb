<h1>Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>CNIC</th>
      <th>Constituency name</th>
      <th>Party name</th>
      <th>Symbol</th>
      <th>Request status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.cnic %></td>
        <td><%= request.constituency_name %></td>
        <td><%= request.party_name %></td>
        <td><%= image_tag request.avatar, width: "100px" if request.avatar.attached? %></td>
        <td><%= request.request_status%></td>
        <td>
          <% if request.request_status == 'pending' %>


            <%= button_to "Approve", request ,method: :patch%>

          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
